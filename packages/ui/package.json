{
	"name": "@findkit/ui",
	"version": "0.0.1",
	"description": "Findkit Search UI",
	"main": "npm-dist/lazy.js",
	"typings": "npm-dist/lazy.d.ts",
	"files": [
		"npm-dist",
		"src"
	],
	"scripts": {
		"dev:js": "jake watch-js",
		"dev:css": "jake watch-css",
		"dev:serve": "serve -p 28104 tests",
		"tsc": "tsc",
		"build": "jake build-all",
		"test": "tsc && size-limit",
		"playwright-test": "playwright test",
		"publish-build": "(cd ../../ && ./node_modules/.bin/turbo run build) && jake upload",
		"dev": "run-p 'dev:*'"
	},
	"author": "Valu Digital Oy",
	"size-limit": [
		{
			"path": "cdn-dist/modal.js",
			"limit": "30kb"
		},
		{
			"path": "cdn-dist/lazy.js",
			"limit": "2kb"
		}
	],
	"browserslist": [
		"last 1 chrome version"
	],
	"alias": {
		"react": "preact/compat",
		"react-dom": "preact/compat"
	},
	"devDependencies": {
		"@findkit/fetch": "workspace:*",
		"@microsoft/api-documenter": "^7.19.0",
		"@microsoft/api-extractor": "^7.28.6",
		"@parcel/watcher": "^2.0.5",
		"@playwright/test": "^1.24.2",
		"@size-limit/preset-small-lib": "^7.0.8",
		"@types/node": "^14.18.4",
		"@types/react": "^17.0.38",
		"@types/react-dom": "^17.0.11",
		"@types/react-redux": "^7.1.21",
		"@typescript-eslint/eslint-plugin": "5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"@valu/npm-tools": "^1.0.0",
		"esbuild": "^0.14.50",
		"esbuild-plugin-alias": "^0.2.1",
		"htm": "^3.1.1",
		"jake": "10.8.1",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.1.1",
		"postcss": "^8.4.14",
		"postcss-cli": "^9.1.0",
		"postcss-import": "^14.1.0",
		"postcss-import-ext-glob": "^2.0.1",
		"postcss-minify": "^1.1.0",
		"postcss-ts-classnames": "^0.3.0",
		"postcss-variables-prefixer": "^1.2.0",
		"preact": "^10.10.0",
		"prettier": "2.5.1",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"serve": "^14.0.1",
		"sh-thunk": "^0.3.2",
		"size-limit": "^7.0.8",
		"tabbable": "^5.3.3",
		"tilg": "^0.1.1",
		"typescript": "4.5.5",
		"valtio": "^1.6.3"
	},
	"license": "ISC",
	"volta": {
		"node": "14.19.2"
	}
}
